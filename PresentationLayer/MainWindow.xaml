<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="MintCream"        
        Icon="DroneIcon.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Background="Aquamarine" Height="80" BorderThickness="0" />
        <TextBox Background="Teal" Text="Welcome to our drones managing program!" Foreground="White" FontWeight="Black" FontSize="30" TextWrapping="Wrap" TextAlignment="Center" Height="50" BorderThickness="0"/>
        <Image   x:Name="imageDrone" Visibility="Visible" Source="DroneLogo.png" Height="151" Width="388" HorizontalAlignment="Stretch" Grid.Row="1"/>
        <TextBox Background="Aquamarine" Grid.Row="2" Height="80" BorderThickness="0" />
        <Button  x:Name="btnShowDrones" Grid.Row="2" Background="Teal" Foreground="White" FontWeight="Black" FontSize="30" Content="show drones" Height="50" Width="284" Click="btnShowDrones_Click" BorderThickness="0"/>
    </Grid>
</Window>
