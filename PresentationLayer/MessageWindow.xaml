<Window x:Class="PL.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MessageWindow" Height="100" Width="200">
    <Grid>
        <TextBox x:Name="message" HorizontalAlignment="Center" Margin="0,10,0,0" Text="" TextWrapping="Wrap" BorderThickness="0" VerticalAlignment="Top" Width="180" IsReadOnly="True"/>
        <Button Content="OK" HorizontalAlignment="Center" Margin="0,42,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
